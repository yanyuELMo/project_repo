{
  "name": "mlops-conda",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "runArgs": [
    "--gpus=all",
    "--ipc=host",
    "--shm-size=16g"
  ],

  "containerEnv": {
    "HYDRA_FULL_ERROR": "1",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
  },

  "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/mlops/bin/python",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "redhat.vscode-yaml"
      ]
    }
  },

  "remoteUser": "vscode"
}
